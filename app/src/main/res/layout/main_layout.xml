        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/border"
                android:scaleType="fitXY"
                android:src="@drawable/compras" />

            <TextView
                android:id="@+id/textViewBuyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buyer"
                android:layout_alignRight="@+id/buyer"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Comprar"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/border"

                android:scaleType="fitXY"
                android:src="@drawable/ventas" />

            <TextView
                android:id="@+id/textViewSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/seller"
                android:layout_alignRight="@+id/seller"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Vender"
                android:textSize="45sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"/>
        </RelativeLayout>


